@using ErolCharityNTIER.DAL.Models
@{
    var causesList = ViewData["Causes"] as List<Cause>;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Tables</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the
            <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
            .
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Causes list <a asp-area="Admin" asp-controller="Home" asp-action="CreateCause">Create</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Raised</th>
                        <th>Goal</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Raised</th>
                        <th>Goal</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var entry in causesList)
                    {
                        <tr>
                            <td>@entry.Id</td>
                            <td>@entry.Name</td>
                            <td>@entry.Description</td>
                            <td>$@entry.Raised</td>
                            <td>$@entry.Goal</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Home" asp-action="EditCause" asp-route-id="@entry.Id">Edit</a>
                                <a asp-area="Admin" asp-controller="Home" asp-action="DeleteCause" asp-route-id="@entry.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
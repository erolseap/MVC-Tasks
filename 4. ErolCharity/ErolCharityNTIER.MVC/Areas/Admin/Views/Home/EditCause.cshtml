@using ErolCharityNTIER.DAL.Models
@model Cause

<div class="container-fluid px-4">
    <h1 class="mt-4">Edit a cause</h1>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Home" asp-action="EditCause" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputName" asp-for="Name" placeholder="Lorem ipsum" required />
                    <label for="inputEmail">Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputDescription" asp-for="Description" placeholder="Lorem ipsum" />
                    <label for="inputDescription">Description</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputRaised" type="number" step="0.01" asp-for="Raised" placeholder="100.00" />
                    <label for="inputRaised">Raised</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputGoal" type="number" step="0.01" asp-for="Goal" placeholder="10000.00" />
                    <label for="inputGoal">Goal</label>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" id="inputImage" type="file" name="Image" />
                    <label for="inputImage">Background image</label>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>